<s:Group
        xmlns:fx="http://ns.adobe.com/mxml/2009"
        xmlns:s="library://ns.adobe.com/flex/spark"
        creationComplete="complete(event)"
>
    <fx:Script>
        <![CDATA[
        private var m_c:MutableDataGridController;

        protected function complete(e:Event):void {
            if (!m_c) {
                m_c = new MutableDataGridController();
                m_c.setInstance(m_g);
            }
        }

        public function init():void {
            if (!m_c) {
                m_c = new MutableDataGridController();
                m_c.setInstance(m_g);
            }
        }

        public function get controller():MutableDataGridController {
            return m_c;
        }

        private function clip(e:KeyboardEvent):void {
            if (e.ctrlKey && (e.keyCode == Keyboard.C)) {
                m_c.performClip();
            }
        }
        ]]>
    </fx:Script>
    <s:DataGrid
            id="m_g"
            width="100%"
            height="100%"
            horizontalScrollPolicy="on"
            verticalScrollPolicy="on"
            keyDown="clip(event)"
    />
</s:Group>
